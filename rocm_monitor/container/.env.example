# ROCm Monitor Stack Configuration
# Copy this file to .env and customize as needed

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=7d
PROMETHEUS_RETENTION_SIZE=5GB
PROMETHEUS_SCRAPE_INTERVAL=15s

# ROCm Monitor Configuration
ROCM_MONITOR_HOST=host.docker.internal
ROCM_MONITOR_PORT=8080

# Port Configuration (change if ports are in use)
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093

# Alert Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=alerts@company.com
ALERT_WEBHOOK_URL=http://localhost:5001/webhook

# Data Persistence (optional external volumes)
# PROMETHEUS_DATA_PATH=/opt/monitoring/prometheus
# GRAFANA_DATA_PATH=/opt/monitoring/grafana
# ALERTMANAGER_DATA_PATH=/opt/monitoring/alertmanager